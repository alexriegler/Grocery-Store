<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" spacing="5.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="grocery.details.DetailsController">
   <children>
      <ImageView fx:id="descriptionImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
      <Text fx:id="productNameText" strokeType="OUTSIDE" strokeWidth="0.0" text="Product Name" />
      <HBox alignment="CENTER">
         <children>
            <Label text="Category: " />
            <Text fx:id="categoryText" strokeType="OUTSIDE" strokeWidth="0.0" text="Category" />
         </children>
      </HBox>
      <Text fx:id="addInfoText" strokeType="OUTSIDE" strokeWidth="0.0" text="add_info" />
      <HBox alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Price: $" />
            <Text fx:id="priceText" strokeType="OUTSIDE" strokeWidth="0.0" text="0.00" />
         </children>
      </HBox>
      <HBox alignment="CENTER" spacing="10.0">
         <children>
            <Label text="Quantity:" />
            <Text fx:id="quantityText" strokeType="OUTSIDE" strokeWidth="0.0" text="1" />
            <VBox alignment="CENTER" spacing="5.0">
               <children>
                  <Button fx:id="increaseQuantityButton" mnemonicParsing="false" onAction="#increaseQuantityButtonOnPress" text="+" />
                  <Button fx:id="decreaseQuantityButton" mnemonicParsing="false" onAction="#decreaseQuantityButtonOnPress" text="-" />
               </children>
            </VBox>
         </children>
      </HBox>
      <Button fx:id="addToCartButton" mnemonicParsing="false" onAction="#addToCartButtonOnPress" text="Add to cart" />
      <HBox alignment="CENTER" spacing="5.0" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
